{
  "schemaVersion": 1,
  "id": "minimalistic-bridging",
  "version": "${version}",

  "name": "Minimalistic Bridging",
  "description": "This is a fork of CG360's original mod: a fabric port of Quark's Reach-Around Placement feature with some tweaks to refine its experience.\nThis fork brings back the old text-based HUD and merges it with the crosshair which is a lot less intrusive than the current icon-based system.",
  "authors": [
    "Aaron Cohen"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/minimalistic-bridging"
  },

  "license": "CC0-1.0",
  "icon": "assets/minimalistic-bridging/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.aaroncohen.bridging.BridgingMod"
    ],
    "client": [
      "com.aaroncohen.bridging.BridgingMod"
    ]
  },
  "mixins": [
    "minimalistic-bridging.mixins.json"
  ],

  "accessWidener": "minimalistic-bridging.accesswidener",

  "depends": {
    "fabricloader": ">=0.14.8",
    "fabric": "*",
    "minecraft": "1.19.x",
    "java": ">=17"
  },
  "suggests": { },

  "custom": {
    "modmenu": {
      "links": {
        "GitHub": "https://github.com/AaronCohen21/MinimalisticBridgingMod",
        "Original Mod": "https://www.curseforge.com/minecraft/mc-mods/survival-building-toolkit-fabric"
      }
    }
  }
}
